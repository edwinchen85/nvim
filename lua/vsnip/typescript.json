{
  "consoleLog": {
    "prefix": "cl",
    "body": "console.log(${1});${2}",
    "description": "Displays a message in the console"
  },
  "functional component": {
    "prefix": ["rfc"],
    "body": [
      "import React, { FC } from 'react'",
      "",
      "interface I${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}Props {\n\t\n}",
      "",
      "const ${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}: FC<${2:props}:${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}Props> = () => {\n\t$0\n}",
      "",
      "export default ${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}"
    ],
    "description": "Functional component"
  },
  "iife": {
    "prefix": ["iife"],
    "body": [
      "((${1:window, document, undefined}) => {",
      "\t${0:${VISUAL}}",
      "}(${2:win, doc}))"
    ]
  },
  "importNoModuleName": {
    "prefix": "imn",
    "body": "import '${1:module}';\n$0",
    "description": "Imports entire module in ES6 syntax without module name"
  },
  "import": {
    "prefix": "imp",
    "body": "import ${2:moduleName} from '${1:module}';\n$0",
    "description": "Imports entire module statement in ES6 syntax"
  },
  "requireToConst": {
    "prefix": "req",
    "body": "const ${1:packageName} = require('${1:package}');\n$0",
    "description": "Require a package to const"
  },
  "useCallback": {
    "prefix": ["uc"],
    "body": ["useCallback(() => {", "\t$1", "}, [])"]
  },
  "useEffect": {
    "prefix": ["ue"],
    "body": ["useEffect(() => {", "\t$1", "}, [])"]
  },
  "useMemo": {
    "prefix": ["um"],
    "body": ["useMemo(() => {", "\t$1", "}, [])"]
  },
  "useRef": {
    "prefix": ["ur"],
    "body": ["const $1 = useRef<$2>($3)"]
  },
  "useState": {
    "prefix": ["us"],
    "body": ["const [$1] = useState($2)"]
  }
}
